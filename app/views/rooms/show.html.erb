<h1>DM</h1>

<h4>参加者</h4>
<% @entries.each do |e| %>
<%= link_to user_path(e.user.id) do %>
<%= e.user.name %>さん
<% end %>
<% end %>

<hr>

<% if @messages.present? %>
<% @messages.each do |m| %>
<strong><%= m.message %></strong>
<%= link_to user_path(m.user.id) do %>
<small>by<%= m.user.name %>さん</small>
<% end %>

<hr>
<% end %>
<% else %>
<h3 class="text-center">メッセージはまだありません</h3>
<% end %>

<%= form_with model: @message do |f| %>
<%= f.text_field :message, :placeholder => "メッセージを入力して下さい" , :size => 70 %>
<%= f.hidden_field :room_id, :value => @room.id %>
<br>
<%= f.submit "投稿する" %>
<% end %>

<%= link_to "ユーザー詳細に戻る", user_path %>