<div class="message">

  <% if message.user == current_user %>
    <span><%= message.user.name %>:</span>
    <div class="commonMessage">
      <div>
        <%= message.message %>
      </div>
    </div>
  <% end %>

  <% if message.user != current_user %>
    <span><%= message.user.name %>:</span>
    <div class="commonMessage">
      <div>
        <%= message.message %>
      </div>
    </div>
  <% end %>

</div>