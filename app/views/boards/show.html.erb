<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h4 class="text-center" style="width:150px">募集詳細</h4>

      <div class="row">
        <div class="col">

          <div class="form-group">
            <h5>
              タイトル<p class="ml-5"><%= @board.title %></p>
          </div>

          <div class="form-group">
            <h5>
              投稿者
              <%= link_to user_path(@board.user) do %>
              <p class="ml-5"><%= @board.user.name %></p>
              <% end %>
          </div>

          <div class="form-group">
            <h5>
              募集要項 <p class="ml-5"><%= @board.essential %></p>
          </div>

          <div class="form-group">
            <h5>求める条件 <p class="ml-5"><%= @board.requirement %></p>
            </h5>
          </div>

          <div class="form-group">
            <h5>連絡先 <p class="ml-5"><%= @board.address %></p>
            </h5>
          </div>

          <div class="actions">
            <% if @board.user == current_user %>
            <%= link_to "編集する", edit_board_path(@board), class:"btn btn-success" %>
            <%= link_to "削除する", board_path(@board), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger destroy_board_#{@board.id}"%>
            <% end %>
          </div>

        </div>
      </div>