<h1>パートナー募集！
  <% if user_signed_in? %>
    <span class="mouse">
      <%= link_to new_board_path(current_user), remote: true do %>
      <i class="fas fa-pen icon"></i>
  <% end  %>
    <span class="word">記入する</span>
    </span>
  <% end %>
</h1>
 
      
<div class="row">
  <% @boards.each do |board| %>
    <div class="col-3 boards">
      
    <% if board.user == current_user %>
       <h3>タイトル
      <%= link_to edit_board_path(board), remote: true do %>
      <i class="far fa-edit"></i>
      <% end %>
    
      <%= link_to board_path(board), method: :delete, data: { confirm: '本当に消しますか？' } do %>
      <i class="far fa-trash-alt"></i>
      <% end %>
      
      <% else %>
      <h3>タイトル　　　　<h3>
    <% end %>
      </h3>
      <p><%= board.title %></p>
      
      <h3>企画内容　　　　　　　</h3>
      <p><%= board.essential.truncate(15) %></p>
      <%= link_to "詳 細 へ→→→", board_path(board), remote: true %>
      <div class="mt-3">
        by <%= board.user.name %>
      </div>
    </div>
  <% end %>
</div>
    