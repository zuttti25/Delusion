<div class="container mt-5">
  <div class="row">
    <div class="col-10">
      <h3 style="width: 200px">ログイン</h3>

      <div class="signup mt-5">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%#= render "users/shared/error_messages", resource: resource %>

        <div class="form-group row">
          <%= f.label :メールアドレス, class:"col-3 col-form-label" %>
          <div class="col-8">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :"パスワード", class:"col-3 col-form-label" %>
          <div class="col-4">
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <legend class="col-3 col-form-control"></legend>
          <div class="col-4">
            <%= f.submit "ログイン", class:"btn btn-success px-5" %>
          </div>
        </div>
        <% end %>
      </div>

      <div class="to-signin mt-4">
        <h4 class="ml-5" style="width: 240px">登録がお済みでない方</h4>
        <%#= render "customers/shared/links" %>
      </div>
    </div>
  </div>
</div>