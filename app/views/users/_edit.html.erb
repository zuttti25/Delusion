<div class="modal-dialog modal-lg">
  <div class="modal-content">

    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">会員編集</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

    <%= form_with model:@user, remote: true do |f| %>

    <div class="modal-body">

      <div class="form-group">
        <%= f.label :プロフィール画像, class:"col-form-label"%>
        <%= f.attachment_field :image, class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :クリエイター名, class:"col-form-label"%>
        <%= f.text_field :name, class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :自己紹介, class:"col-form-label" %>
        <%= f.text_area :introduction, class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :所持しているスキル, class:"col-form-label" %>
        <%= f.text_field :skill, class:"form-control" %>
      </div>

       <div class="form-group">
        <%= f.label :資格など, class:"col-form-label" %>
        <%= f.text_field :certificate, class:"form-control" %>
      </div>

       <div class="form-group">
        <%= f.label :経歴など, class:"col-form-label" %>
        <%= f.text_field :career, class:"form-control" %>
      </div>

       <div class="form-group">
        <%= f.label :受賞歴など, class:"col-form-label" %>
        <%= f.text_field :award, class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :利用しているWEBサービスのLINK, class:"col-form-label" %>
        <%= f.text_field :link, class:"form-control" %>
      </div>

    </div>
    <div class="modal-footer">
      <%= f.submit "更新する", class:"btn btn-success" %>
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
    <% end %>

  </div>
</div>