<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h4 class="text-center" style="width:150px">アトリエ</h4>

      <div class="row">
        <div class="col mt-5">
          <%= attachment_image_tag(@user, :image, :fill, 300, 200) %>
        </div>

        <div class="col">
          <div class="form-group">
            <h5>
              クリエイター名<p class="ml-5"><%= @user.name %></p>
            </h5>
          </div>

          <div class="form-group">
            <h5>
              自己紹介<p class="ml-5"><%= @user.introduction %></p>
            </h5>
          </div>

          <div class="form-group">
            <h5>
              スキル <p class="ml-5"><%= @user.field %></p>
            </h5>
          </div>

          <div class="form-group">
            <h5>作業環境URL <p class="ml-5"><%= Rinku.auto_link(@user.link, :all, 'target="_blank"').html_safe %></p>
            </h5>
          </div>



          <div class="actions">
            <%= link_to "アトリエを改造する", edit_user_path(@user), class: "btn btn-success" %>
          </div>

        </div>
      </div>
    </div>