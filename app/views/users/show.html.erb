<div class="container">
  <div class="row mt-5 text-center">
    <div class="col text-center">

      <div class="row">
        <div class="col mt-5">
          <%= attachment_image_tag @user, :image, :fill, 200, 200, format: 'jpg', fallback:"no_image.jpg", class: "rounded-circle" %>
        </div>

        <div class="col">

          <div class="form-group">
            <h2> <%= @user.name %> </h2>
          </div>

          <div class="form-group">
            <h5> <%= @user.introduction %> </h5>
          </div>

          <div class="form-group">
            <h5> <%= @user.skill %> </h5>
          </div>

          <% if @user.link.nil? %>
          <div class="form-group">
            <h5> <%= @user.link %> </h5>
          </div>
          <% else %>
          <div class="form-group">
            <h5> <%= Rinku.auto_link(@user.link, :all, 'target="_blank"').html_safe %> </h5>
          </div>
          <% end %>

          <%= render 'rooms/room_button', user: @user, isRoom: @isRoom,  roomId: @roomId, room: @room, entry: @entry %>

          <%= render 'relationships/follow_button', user: @user %>
          <h5>followings：<%= link_to @user.followings.count, followings_path(@user) %></h5>
          <h5>followers：<%= link_to @user.followers.count, followers_path(@user) %></h5>
          <div class="actions">
            <%= link_to "アトリエを改造する", edit_user_path(@user), class: "btn btn-success" %>
          </div>

        </div>
      </div>
    </div>