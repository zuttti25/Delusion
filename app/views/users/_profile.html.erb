<div class="col-4">
       <% if @user.image.nil? %>
        <div class ="profile_image">
          <i class="far fa-smile"></i>
        </div>
       <% else %>
          <div class ="profile_image">
            <%= attachment_image_tag @user, :image, format: 'jpeg', size: "100x100", class: "rounded-circle" %>
          </div>
       <% end %>

        <h3><%= @user.name %></h3>


          <div class="follow_count">
            <%= render "relationships/follow_count" , user: @user %>
          </div>

        <span>
          <div>
            <%= render 'rooms/room_button', user: @user, isRoom: @isRoom,  roomId: @roomId, room: @room, entry: @entry %>
          </div>
        </span>

         <span>
          <div>
            <%= render 'relationships/follow_button', user: @user %>
          </div>
         </span>

        <% if @user == current_user %>

        <span>
          <div class="mouse">
            <%= link_to edit_user_path(@user), remote: true do %>
              <i class="fas fa-user-cog fa-2x"></i>
            <%  end %>
            <span class="word">編集する</span>
          </div>
        </span>

        <span>
          <div>
            <%= link_to "めっせーじなう", rooms_path(@user), class: "btn btn-outline-success", remote: true %>
          </div>
        </span>

        <% end %>
    </div>


<div class="col-8">

  <h2>自己紹介</h2>
    <div class="form-group">
      <h5> <%= simple_format @user.introduction %> </h5>
    </div>

    <div class="form-group">
      <h5>作業場所へのリンクはこちら↓↓</h5>
        <% if @user.link.nil? %>
          <div class="form-group">
            <h5> <%= @user.link %> </h5>
          </div>
        <% else %>
          <div class="form-group">
            <h5> <%= Rinku.auto_link(@user.link, :all, 'target="_blank"').html_safe %> </h5>
          </div>
        <% end %>
    </div>

</div>