  <div class="row">
  <% if my_post.exists? %>
   <% my_post.each do |post| %>
    <div class="col-3">
      <%= link_to post_path(post), remote: true do %>
      <%= attachment_image_tag post, :image, format: 'jpeg', size: "200x125", fallback:"no_image.post.jpg" %> <br>
      <% end %>
      <p><%= post.title %></p>
      <p>いいね件数: <%= post.likes.count %></p>
      <p><%= link_to "#{post.comments.count} コメント", post_path(post),remote: true %></p>
      <% post.tags.each do |tag| %>
       <span><i class="fas fa-tags"></i></span>
       <span><p><%= link_to tag.tag_name, posts_path(tag_id: tag.id) %></p></span>
      <% end %>
    </div>
   <% end %>
  <% else %>
  <div class="col-12 no_text">
    <h2>
      活動実績はまだありません
    </h2>
  </div>
  <% end %>
  </div>