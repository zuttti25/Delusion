<header>
  <nav class="navbar">
    <div class="container">

      <%= link_to root_path do %>
      <%= image_tag asset_path('logo.jpg'), class:"logo-img mr-2" %>
      <% end %>

      <%= form_tag(search_path, :method => 'get') do %>
      <%= select_tag(:option, options_for_select([["クリエイター", "1"],["投稿作品","2"],["タグ","3"],["掲示板","4"]]))%>
      <%= text_field_tag :search %>
      <%= submit_tag '検索する' %>
      <% end %>

      <% if user_signed_in? %>

      <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>

      <%= link_to "通知", notifications_path, remote: true %>

      <%= link_to "マイページ", user_path(current_user), remote: true %>

      <%= link_to "新規投稿", new_post_path(@user), remote: true %>
      
      <% else %>

      <%= link_to "新規登録", new_user_registration_path %>

      <%= link_to "ログイン", new_user_session_path %>

      <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post %>

      <% end %>
    </div>
  </nav>
</header>