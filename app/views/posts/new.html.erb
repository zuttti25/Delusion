<div class="form-area">
  <%= form_with model: @post, local: true do |f|%>
  <div class="post-form">

    <p>イメージ</p>
    <%= f.file_field :image %>

    <p>タイトル<span style="color:red;">（必須）</span></p>
    <%= f.text_field :title %>

    <p>作品紹介<span style="color:red;">（必須）</span></p>
    <%= f.text_area :product %>

    <p>LINK</p>
    <%= f.text_field :link %>

    <p>カテゴリー<span style="color:red;">（必須）</span></p>
    <%= f.select :category_id, Category.all.map {|category| [category.name, category.id ] } %>

    <div class="post-btn">
      <%= f.submit "投稿する", class:"btn btn-success" %>
    </div>

    <% end %>
  </div>