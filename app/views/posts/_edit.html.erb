<div class="modal-dialog" role="document">
  <div class="modal-content">

    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">作品編集</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

    <%= form_with model: @post, remote: true do |f|%>

    <div class="modal-body">

      <div class="form-group">
        <%= f.label :image, "イメージ" %>
        <%= f.file_field :image, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :title, "タイトル" %>
        <%= f.text_field :title,class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :product, "作品紹介" %>
        <%= f.text_area :product, class: "form-control" %>
      </div>


      <div class="form-group">
        <%= f.label :link, "リンク先" %>
        <%= f.text_field :link, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :tag, "タグ" %>
        <%= f.text_field :tag_name, value: @tag_list, class: "form-control" %>
      </div>

    </div>

    <div class="modal-footer">
      <%= f.submit "更新する", class:"btn btn-success" %>
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
    <% end %>

  </div>
</div>