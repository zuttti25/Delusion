<div class="container mt-5">
  <div class="row">
    <h4>投稿一覧</h4>
  </div>
  <div class="container">
    <% @posts.each do |post| %>
    <div class="col-sm-3">
      <div>
        <%= link_to post_path(post) do %>
        <%= attachment_image_tag post, :image, format: 'jpeg', size: "200x125", fallback:"no_image.post.jpg" %> <br>
        <% end %>
      </div>
      <p class="mt-3"><%= post.title %></p>
      <p class="mb-4"><%= post.category.name %></p>
    </div>
    <% end %>
  </div>
</div>