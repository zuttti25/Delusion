<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h4 class="text-center" style="width:150px">作品詳細</h4>

      <div class="row">
        <div class="col mt-5">
          <%= attachment_image_tag(@post, :image, :fill, 300, 200, fallback:"no_image.post.jpg") %>
        </div>

        <div class="col">
          <div class="form-group">
            <h5>作品名<%= @post.title %></h5>
          </div>

          <div class="form-group">
            <h5>作品紹介 <p class="ml-5"><%= @post.product %></p>
            </h5>
          </div>

          <div class="form-group">
            <h5>
              リンク先 <p class="ml-5">
                <%= Rinku.auto_link(@post.link, :all, 'target="_blank"').html_safe %>
              </p>
            </h5>
          </div>

          <div class="form-group">
            <h5>ジャンル <p class="ml-5"><%= @post.category.name %></p>
            </h5>
          </div>

          <div id="like-btn-<%= @post.id %>">
            <%= render 'likes/like', post: @post %>
          </div>

          <div class="actions">
            <% if @post.user == current_user %>
            <%= link_to "編集する", edit_post_path(@post), class:"btn btn-success" %>
            <%= link_to "削除する", post_path(@post), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger destroy_post_#{@post.id}"%>
            <% end %>
          </div>

        </div>
      </div>
    </div>