    <div class="row">

      <div class="col-4">
        <span>
          <div id="like-btn-<%= post.id %>">
            <%= render 'likes/like', post: post %>
          </div>
        </span>

        <span>
          <div>
            <i class="far fa-eye"></i><%=  post.impressionist_count %>
          </div>
        </span>
        
        <div>
          <% post.tags.each do |tag| %>
            <i class="fas fa-tags"></i>
            <%= link_to tag.tag_name, posts_path(tag_id: tag.id), class: "btn btn-outline-warning" %>
          <% end %>
        </div>
      

        <div id="comment-form-<%= post.id %>">
          <%= render 'comments/comment', post: @post, comment: @comment, user: @user %>
        </div>

      </div>

      <div class="col-8 post-content">
        <%= render 'posts/content', post: @post %>
      </div>

      </div>