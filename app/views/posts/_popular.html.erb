<div class="row">
  <% @popular.each.with_index(1) do |post, i| %>
    <div class="col-4">
      <p>
        第<%= i %>位
        <%= link_to post_path(post.id), remote: true do %>
        <% post.title.truncate(20) %>
        <% end %>
      <p>
        内容:<%= post.product.truncate(20)  %>
      </p>
      <p>
        SKILL:<%= post.skill.truncate(20) %>
      </p>
      <p>
        いいね件数:<%= post.likes.count %>
      </p>
    </div>
  <% end %>
</div>